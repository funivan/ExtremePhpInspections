<idea-plugin>
    <id>com.funivan.php.extremePhpInspections</id>
    <name>Extreme inspections for php</name>
    <version>1.0</version>
    <vendor email="alotofall@gmail.com" url="http://funivan.com">Funivan</vendor>

    <description><![CDATA[
      Make your code more strict and flexible
    ]]></description>

    <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="145.0"/>

    <depends>com.jetbrains.php</depends>
    <depends>com.intellij.modules.platform</depends>
    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <localInspection
            groupPath="PHP,ExtremePhpInspection"
            groupName="Static"
            implementationClass="com.funivan.php.extremePhpInspections.inspections.AvoidStaticMethodsInspection"
            enabledByDefault="true"
            displayName="Avoid Static methods"
            shortName="AvoidStaticMethodsInspection"
        />
        <localInspection
            groupPath="PHP,ExtremePhpInspection"
            groupName="General"
            implementationClass="com.funivan.php.extremePhpInspections.inspections.DeclareMethodsInTheInterfaceInspection"
            enabledByDefault="true"
            displayName="Public methods should be declared in the interface"
            shortName="DeclareMethodsInTheInterfaceInspection"
        />
        <localInspection
            groupPath="PHP,ExtremePhpInspection"
            groupName="General"
            implementationClass="com.funivan.php.extremePhpInspections.inspections.AvoidHugeInterfacesInspection"
            enabledByDefault="true"
            displayName="Avoid huge interfaces"
            shortName="AvoidHugeInterfacesInspection"
        />
        <localInspection
            groupPath="PHP,ExtremePhpInspection"
            groupName="General"
            implementationClass="com.funivan.php.extremePhpInspections.inspections.AvoidExceptionsInConstructorInspection"
            enabledByDefault="true"
            displayName="Avoid exceptions in the constructor"
            shortName="AvoidExceptionsInConstructorInspection"
        />
        <localInspection
            groupPath="PHP,ExtremePhpInspection"
            groupName="Static"
            implementationClass="com.funivan.php.extremePhpInspections.inspections.AvoidStaticPropertiesInspection"
            enabledByDefault="true"
            displayName="Avoid static properties"
            shortName="AvoidStaticPropertiesInspection"
        />
        <localInspection
            groupPath="PHP,ExtremePhpInspection"
            groupName="Visibility"
            implementationClass="com.funivan.php.extremePhpInspections.inspections.AvoidProtectedMethodsInspection"
            enabledByDefault="true"
            displayName="Avoid protected methods"
            shortName="AvoidProtectedMethodsInspection"
        />
        <localInspection
            groupPath="PHP,ExtremePhpInspection"
            groupName="Visibility"
            implementationClass="com.funivan.php.extremePhpInspections.inspections.AvoidPublicOrProtectedPropertiesInspection"
            enabledByDefault="true"
            displayName="Avoid protected or public properties"
            shortName="AvoidPublicOrProtectedPropertiesInspection"
        />
        <localInspection
            groupPath="PHP,ExtremePhpInspection"
            groupName="Visibility"
            implementationClass="com.funivan.php.extremePhpInspections.inspections.PublicMethodsShouldBeFinalInspection"
            enabledByDefault="true"
            displayName="Public methods should be final"
            shortName="PublicMethodsShouldBeFinalInspection"
        />
        <localInspection
            groupPath="PHP,ExtremePhpInspection"
            groupName="Magic"
            implementationClass="com.funivan.php.extremePhpInspections.inspections.AvoidMagicMethodsInspection"
            enabledByDefault="true"
            displayName="Avoid magic methods"
            shortName="AvoidMagicMethodsInspection"
        />
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>

</idea-plugin>